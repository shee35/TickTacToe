<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8393EA"
            android:freezesText="true"
            android:text="@string/player_1"
            android:textColor="#070606"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/p1"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#8393EA"
            android:layout_toEndOf="@id/text_view_p1"
            android:layout_toRightOf="@id/text_view_p1"
            android:text="@string/_0"
            android:textColor="#070606"
            android:textSize="30sp"
            android:freezesText="true"/>

        <TextView
            android:id="@+id/text_view_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_p1"
            android:freezesText="true"
            android:background="#8393EA"
            android:text="@string/player_2"
            android:textColor="#040303"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/p2"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p1"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@id/text_view_p2"
            android:layout_toRightOf="@id/text_view_p2"
            android:background="#8393EA"
            android:text="@string/_0"
            android:textColor="#070505"
            android:freezesText="true"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="151dp"
            android:layout_marginLeft="151dp"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:layout_toEndOf="@+id/text_view_p1"
            android:layout_toRightOf="@+id/text_view_p1"
            android:background="#D79CE388"
            android:text="@string/reset" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_00"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#77B3DC"
            android:freezesText="true"
            android:text="@string/a"
            android:textColor="#070505"
            android:textSize="60sp"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/button_01"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D57DC2"
            android:freezesText="true"
            android:text="@string/a"
            android:textColor="#070505"
            android:textSize="60sp" />
        <Button
            android:id="@+id/button_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#77B3DC"
            android:textColor="#070505"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/a"
            android:textSize="60sp"
            android:freezesText="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D57DC2"
            android:textColor="#070505"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/a"
            android:textSize="60sp"
            tools:ignore="NestedWeights"
            android:freezesText="true"/>

        <Button
            android:id="@+id/button_11"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8E3CC86"
            android:freezesText="true"
            android:text="@string/a"
            android:textColor="#070505"
            android:textSize="60sp" />
        <Button
            android:id="@+id/button_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D57DC2"
            android:textColor="#070505"
            android:text="@string/a"
            style="?android:attr/buttonBarButtonStyle"
            android:textSize="60sp"
            android:freezesText="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_20"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#77B3DC"
            android:freezesText="true"
            android:text="@string/a"
            android:textColor="#070505"
            android:textSize="60sp"
            tools:ignore="NestedWeights" />
        <Button
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#D57DC2"
            android:textColor="#070505"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/a"
            android:textSize="60sp"
            android:freezesText="true"/>

        <Button
            android:id="@+id/button_22"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#77B3DC"
            android:freezesText="true"
            android:text="@string/a"
            android:textColor="#070505"
            android:textSize="60sp" />
    </LinearLayout>
</LinearLayout>